<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="task_type_form" model="ir.ui.view">
            <field name="name">Task Type - Form</field>
            <field name="model">task.type</field>
            <field name="arch" type="xml">
                <form string="Task Type">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="task_type_tree" model="ir.ui.view">
            <field name="name">Task Type - Tree</field>
            <field name="model">task.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_task_type" model="ir.actions.act_window">
            <field name="name">Task Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">task.type</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="task_type_menu_1" parent="project.menu_project_config" name="Task Type" action="action_task_type" sequence="11"/>
    </data>
</odoo>