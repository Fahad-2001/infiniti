<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="task_template_form" model="ir.ui.view">
            <field name="name">Task Template - Form</field>
            <field name="model">task.template</field>
            <field name="arch" type="xml">
                <form string="Task Template">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                        </group>
                        <field name="subtask_ids">
                            <tree editable="bottom">
                                <field name="name"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="task_template_tree" model="ir.ui.view">
            <field name="name">Task Template - Tree</field>
            <field name="model">task.template</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_task_template" model="ir.actions.act_window">
            <field name="name">Task Template</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">task.template</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="task_template_menu" parent="project.menu_project_config" name="Task Template" action="action_task_template" sequence="10"/>
    </data>
</odoo>