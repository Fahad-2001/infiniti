<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="media_type_form" model="ir.ui.view">
            <field name="name">Media Type - Form</field>
            <field name="model">media.type</field>
            <field name="arch" type="xml">
                <form string="Media Type">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="open_digital_assets" string="Digital Videos" type="object" icon="fa-play-circle-o">
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="media_type_tree" model="ir.ui.view">
            <field name="name">Media Type - Tree</field>
            <field name="model">media.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_media_type" model="ir.actions.act_window">
            <field name="name">Media Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">media.type</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="media_type_menu_1" parent="digital_videos_conf" name="Media Type" action="action_media_type" sequence="13"/>
    </data>
</odoo>