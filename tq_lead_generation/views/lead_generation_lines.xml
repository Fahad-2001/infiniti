<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="lead_generation_lines_search" model="ir.ui.view">
            <field name="name">Lead Generation Line- Search</field>
            <field name="model">lead.generation.line</field>
            <field name="arch" type="xml">
                <search string="Lead Generation Line">
                    <field name="email" filter_domain="[('email','ilike',self)]" string="email"/>
                    <field name="lead_id" filter_domain="[('lead_id','ilike',self)]" string="Lead"/>
                    <field name="create_uid" filter_domain="[('create_uid','ilike',self)]" string="Created By"/>

                    <filter name="is_exported" string="Exported" domain="[('is_exported', '=', True)]"/>
                    <filter name="is_exported" string="Not Exported" domain="[('is_exported', '=', False)]"/>

                    <!-- group by-->
                    <group expand="0" string="Group By">
                        <filter string="Social Media Network" name="platform_id" context="{'group_by':
                        'platform_id'}" help="Social Media Network"/>
                    </group>
                </search>
            </field>
        </record>


        <record id="lead_generation_lines_tree" model="ir.ui.view">
            <field name="name">Lead Generation Line - Tree</field>
            <field name="model">lead.generation.line</field>
            <field name="arch" type="xml">
                <tree create="0" delete="0" edit="0" export_xlsx="false">
                    <field name="lead_id"/>
                    <field name="platform_id"/>
                    <field name="email"/>
                    <field name="name"/>
                    <field name="website" widget="url"/>
                    <field name="phone"/>
                    <field name="is_exported"/>
                    <field name="export_datetime"/>
                    <field name="user_id" options="{'no_create': True}"/>
                    <field name="create_date" string="Research Date"/>
                </tree>
            </field>
        </record>

        <record id="action_lead_generation_lines" model="ir.actions.act_window">
            <field name="name">Contacts (Lead Lines)</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">lead.generation.line</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem id="lead_generation_lines_menu" groups="tq_lead_generation.lead_generation_group_manager" parent="lead_generation_root" name="Contacts" action="action_lead_generation_lines" sequence="20"/>

    </data>
</odoo>