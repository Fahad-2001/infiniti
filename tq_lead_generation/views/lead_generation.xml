<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="lead_generation_search" model="ir.ui.view">
            <field name="name">Lead Generation - Search</field>
            <field name="model">lead.generation</field>
            <field name="arch" type="xml">
                <search string="Lead Generation">
                    <field name="page_seq" filter_domain="[('page_seq','ilike',self)]" string="Page ID"/>
                    <field name="page_link" filter_domain="[('page_link','ilike',self)]" string="Page Link"/>
                    <field name="lead_generation_lines" filter_domain="[('lead_generation_lines.email','ilike',self)]" string="Email"/>
                    <field name="platform_id" filter_domain="[('platform_id','ilike',self)]" string="Social Media Network"/>
                    <field name="create_uid" filter_domain="[('create_uid','ilike',self)]" string="Created By"/>

                    <!-- filter -->
                    <filter name="lead_generation_lines" string="Leads w/o contacts" domain="[('lead_generation_lines', '=', False)]"/>

                    <!-- group by-->
                    <group expand="0" string="Group By">
                        <filter string="Social Media Network" name="platform_id" context="{'group_by':
                        'platform_id'}" help="Social Media Network"/>
                        <filter string="Created By" name="create_uid" context="{'group_by':'create_uid'}"
                                help="Created By"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="lead_generation_form" model="ir.ui.view">
            <field name="name">Lead Generation - Form</field>
            <field name="model">lead.generation</field>
            <field name="arch" type="xml">
                <form string="Lead Generation" duplicate="0">
                    <sheet>
                        <div class="oe_title">
                            <h2>
                                <field name="page_seq" />
                            </h2>
                        </div>
                        <group>
                            <group>
                                <field name="platform_id" required="1" options="{'no_create': True}"/>
                                <field name="page_name"/>
                                <field name="page_link" widget="url"/>
                            </group>
                            <group>
                                <field name="followers"/>
                                <field name="create_date" string="Research Date"/>
                                <field name="create_uid" options="{'no_open': True}"/>
                            </group>
                        </group>
                        <field name="lead_generation_lines">
                            <tree editable="bottom">
                                <field name="email"/>
                                <field name="platform_id" optional="hide"/>
                                <field name="name"/>
                                <field name="website" widget="url"/>
                                <field name="phone"/>
                                <field name="is_exported"/>
                                <field name="export_datetime"/>
                                <field name="user_id" options="{'no_create': True}"/>
                                <field name="create_date" string="Research Date"/>
                            </tree>
                        </field>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

        <record id="lead_generation_tree" model="ir.ui.view">
            <field name="name">Lead Generation - Tree</field>
            <field name="model">lead.generation</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="page_seq"/>
                    <field name="page_link" widget="url"/>
                    <field name="page_name"/>
                    <field name="followers"/>
                    <field name="platform_id"/>
                    <field name="lines_count"/>
                    <field name="create_uid"/>
                    <field name="create_date" string="Research Date"/>
                </tree>
            </field>
        </record>

        <record id="action_lead_generation" model="ir.actions.act_window">
            <field name="name">Lead Generation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">lead.generation</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="lead_generation_root" name="Lead Generation" sequence="8" web_icon="tq_lead_generation,static/src/img/icon.png"/>
        <menuitem groups="tq_lead_generation.lead_generation_group_manager" id="lead_generation_menu_1" parent="lead_generation_root" name="Lead Generation" action="action_lead_generation" sequence="10"/>

    </data>
</odoo>