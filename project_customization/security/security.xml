<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="project_project_rule_restrict_user" model="ir.rule">
        <field name="name">Assigned user can view project</field>
        <field ref="project.model_project_project" name="model_id"/>
        <field name="domain_force">['|', ('user_ids', 'in', user.id), ('user_id', '=', user.id)]</field>
<!--        <field name="groups" eval="[(4, ref('base.group_user'))]"/>-->
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="active" eval="True"/> <!-- opw-2027005: this rules breaks sale "see own document" -->
    </record>
</odoo>